#include <stdio.h>
int main() {
    int n, i, sum = 0;

    printf("Enter a positive integer: ");
    scanf("%d", &n);
    if( n < 0 ) {
      printf("please enter a positive integer" );
   } else {


     for (i = 1; i <= n; ++i) {
          sum += i;
        }
    
    printf("Sum = %d", sum);
   }
    return 0;
}
